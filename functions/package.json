{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "start": "firebase emulators:start",
    "deploy-staging": "firebase deploy -P staging",
    "deploy-prod": "firebase deploy -P production",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "@googlemaps/google-maps-services-js": "^2.3.1",
    "@hapi/joi": "^17.1.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase-admin": "^8.6.0",
    "firebase-auth": "^0.1.2",
    "firebase-functions": "^3.3.0",
    "joi-phone-number": "^4.1.0",
    "monday-sdk-js": "0.0.13",
    "node-fetch": "^2.6.0",
    "nodemailer": "^6.4.6",
    "serve-static": "^1.14.1"
  },
  "devDependencies": {
    "eslint": "^5.12.0",
    "eslint-plugin-promise": "^4.0.1",
    "firebase-functions-test": "^0.1.6",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.10",
    "prettier": "^2.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,css,scss,html,md}": "prettier --write",
    "*.js": [
      "eslint",
      "prettier --write"
    ]
  }
}
