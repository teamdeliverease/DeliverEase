{
  "name": "deliverease",
  "version": "1.0.0",
  "description": "We connect helpful volunteers with individuals who have a hard time accessing food and other essentials.",
  "repository": "https://github.com/shaibruhis/DeliverEase",
  "license": "UNLICENSED",
  "private": true,
  "main": "dist/server/index.js",
  "scripts": {
    "start": "NODE_ENV=production firebase emulators:start",
    "build:client": "next build src/client",
    "build:server": "babel src/server --out-dir dist/server --source-maps",
    "build": "npm run build:client && npm run build:server",
    "watch:client": "next src/client",
    "watch:server": "babel src/server --out-dir dist/server --source-maps --watch",
    "watch": "npm run watch:client & npm run watch:server",
    "predeploy": "rimraf dist/ && npm run build",
    "deploy": "npm run firebase deploy --only functions,hosting"
  },
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "@googlemaps/google-maps-services-js": "^2.6.0",
    "@hapi/joi": "^17.1.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase-admin": "^8.6.0",
    "firebase-functions": "^3.6.1",
    "google-map-react": "^1.1.7",
    "joi-phone-number": "^4.1.0",
    "monday-sdk-js": "0.0.13",
    "next": "^9.3.2",
    "node-fetch": "^2.6.0",
    "nodemailer": "^6.4.6",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-bootstrap": "^1.0.1",
    "react-dom": "^16.8.6",
    "sass": "^1.26.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "cross-env": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "0.0.0-d7382b6c4",
    "firebase-functions-test": "^0.1.6",
    "firebase-tools": "^7.2.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.10",
    "prettier": "^2.0.2",
    "rimraf": "^2.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,css,scss,html,md}": "prettier --write",
    "*.js": [
      "eslint",
      "prettier --write"
    ]
  }
}
