{
  "parserOptions": {
    // Required for certain syntax usages
    "ecmaVersion": 2018
  },
  "extends": ["airbnb", "airbnb/hooks", "prettier", "prettier/react"],
  "rules": {
    "no-console": "off",
    "react/react-in-jsx-scope": "off",
    "no-param-reassign": "warn",
    "react/jsx-props-no-spreading": "off",
    "global-require": "off",
    "no-alert": "off"
  },
  "globals": {
    "React": "writable"
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  }
}
