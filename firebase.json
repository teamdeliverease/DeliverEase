{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "src/public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      },
      {
        "source": "**/**",
        "function": "next"
      }
    ]
  },
  "functions": {
    "source": "src/functions",
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"]
  }
}
